<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
	
	<!-- Root Context: defines shared resources visible to all other web components -->
	
	<bean id="productDAO" class="com.coockoo.shop.dao.ProductDAO"></bean>
	<bean id="orderDAO" class="com.coockoo.shop.dao.OrderDAO"></bean>
	
	<bean id="productService" class="com.coockoo.shop.services.ProductService"></bean>
	<bean id="orderService" class="com.coockoo.shop.services.OrderService"></bean>
	
	<import resource="data.xml"/>
		
</beans>
